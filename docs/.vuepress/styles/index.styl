body {
  font-family: "Microsoft YaHei Mono", "微软雅黑", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
}


@media (min-width: 1200px) and (max-width: 1920px) {
  .img-layout {
    width: 80%;
    margin: 0 auto;
  }
}

@media (min-width: 960px) and (max-width: 1200px) {
  .img-layout {
    width: 85%;
    margin: 0 auto;
  }
}

@media (max-width: 960px) {
  .img-layout {
    width: 90%;
    margin: 0 auto;
  }
}